<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.guessthepattern.MainActivity"
    android:alpha="128">


    <Button
        android:text="PLAY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:id="@+id/play"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/tableLayout1" />

    <Button
        android:text="Watch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:id="@+id/watch"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tableLayout1" />

    <TextView
        android:text="     Level 1"
        android:layout_width="200dp"
        android:id="@+id/textView"
        android:textSize="@android:dimen/notification_large_icon_height"
        tools:textSize="24sp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TableLayout
        android:layout_width="300dp"
        android:id="@+id/tableLayout1"
        android:gravity="center"
        android:layout_marginEnd="15dp"
        android:shrinkColumns="*"
        android:layout_height="340dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp" >

            <View
                app:srcCompat="@color/colorAccent"
                android:id="@+id/color_1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:alpha="128"
                android:clickable="true" />

            <View
                app:srcCompat="@color/colorPrimary"
                android:id="@+id/color_2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:alpha="128"
                android:clickable="true" />

            <View
                app:srcCompat="@android:color/holo_red_light"
                android:id="@+id/color_3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:alpha="128"
                android:clickable="true" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp" >

            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@android:color/darker_gray"
                android:id="@+id/color_4"
                android:alpha="128"
                android:clickable="true" />

            <View
                android:layout_width="100dp"
                app:srcCompat="@android:color/holo_orange_dark"
                android:id="@+id/color_5"
                android:layout_height="100dp"
                android:alpha="128"
                android:clickable="true" />

            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@android:color/holo_purple"
                android:id="@+id/color_6"
                android:alpha="128"
                android:clickable="true" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp" >

            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@android:color/holo_blue_dark"
                android:id="@+id/color_7"
                android:alpha="128"
                android:clickable="true" />

            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="?android:attr/colorForeground"
                android:id="@+id/color_8"
                android:alpha="128"
                android:clickable="true" />

            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@android:color/holo_red_dark"
                android:id="@+id/color_9"
                android:alpha="128"
                android:clickable="true" />

        </TableRow>
    </TableLayout>

</RelativeLayout>
